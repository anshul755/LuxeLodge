<% layout("/layout/boilerplate") %>
<body class="bg-light">

  <!-- Search Bar -->
  <div class="container py-4">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        <form action="/listings" method="GET" class="input-group shadow-sm">
          <input
            type="text"
            name="q"
            class="form-control rounded-start"
            placeholder="Search here"
            value="<%= typeof q !== 'undefined' ? q : '' %>"
          />
          <button class="btn bcol rounded-end" type="submit">Search</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Flash Messages -->
  <div class="container">
    <% if (success && success.length != 0) { %>
      <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (error && error.length != 0) { %>
      <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>

  <!-- Listings Grid -->
  <div class="container pb-5">
    <div class="row g-4">
      <% for (let list of all_listing) { %>
        <div class="col-12 col-sm-6 col-md-4">
          <a href="/listings/<%= list._id %>" class="text-decoration-none text-dark">
            <div class="card listing-card shadow-sm border-0 h-100 rounded-4">
              <div class="overlay"></div>
              <img src="<%= list.image.url %>" class="card-img-top" style="height: 220px; object-fit: cover;" alt="listing_Img">
              <div class="card-body p-3">
                <h6 class="fw-bold text-truncate mb-1"><%= list.title %></h6>
                <p class="text-muted mb-0 small">â‚¹<%= Number(list.price).toLocaleString("en-IN") %> / night</p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>

</body>